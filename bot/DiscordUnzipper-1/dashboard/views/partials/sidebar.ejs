<div class="col-md-3 col-lg-2 d-md-block sidebar collapse">
  <div class="position-sticky pt-3">
    <div class="text-center mb-4">
      <h4 class="text-white">Bot Admin Panel</h4>
      <p class="text-muted">v1.0.0</p>
    </div>
    <hr>
    <ul class="nav flex-column">
      <li class="nav-item">
        <a class="nav-link <%= title === 'Dashboard' ? 'active' : '' %>" href="/dashboard">
          <i class="bi bi-speedometer2 me-2"></i>
          Dashboard
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link <%= title === 'Stock Management' || title.includes('Accounts') ? 'active' : '' %>" href="/stock">
          <i class="bi bi-box-seam me-2"></i>
          Stock Management
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link <%= title === 'Ticket System' ? 'active' : '' %>" href="/tickets">
          <i class="bi bi-ticket-perforated me-2"></i>
          Ticket System
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link <%= title === 'User Management' ? 'active' : '' %>" href="/users">
          <i class="bi bi-people me-2"></i>
          User Management
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link <%= title === 'Bot Settings' ? 'active' : '' %>" href="/settings">
          <i class="bi bi-gear me-2"></i>
          Bot Settings
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link <%= title === 'Logs & Analytics' ? 'active' : '' %>" href="/logs">
          <i class="bi bi-graph-up me-2"></i>
          Logs & Analytics
        </a>
      </li>
    </ul>
    
    <hr>
    <% if(user) { %>
      <div class="text-center">
        <div class="mb-2">
          <span class="badge bg-primary">Admin</span>
        </div>
        <div class="mb-2">
          <strong><%= user.username %></strong>
        </div>
        <a href="/logout" class="btn btn-sm btn-danger">
          <i class="bi bi-box-arrow-right me-1"></i> Logout
        </a>
      </div>
    <% } %>
  </div>
</div>